                    app:layout_constraintTop_toTopOf="@+id/tv_qrs" />

                <TextView
                    android:id="@+id/tv_qrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/title_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/tvHr"
                    app:layout_constraintTop_toBottomOf="@+id/tvHr"
                    tools:text="0.0 ms" />

                <TextView
                    android:id="@+id/tvlbl_st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto"
                    android:text="ST"
                    android:textColor="@color/title_color"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_st"
                    app:layout_constraintStart_toStartOf="@+id/tvlbl_qrs"
                    app:layout_constraintTop_toTopOf="@+id/tv_st" />

                <TextView
                    android:id="@+id/tv_st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/title_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_qrs"
                    app:layout_constraintTop_toBottomOf="@+id/tv_qrs"
                    tools:text="0.0 ms" />


                <TextView
                    android:id="@+id/tvlblQt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="48dp"
                    android:fontFamily="@font/roboto"
                    android:text="QT"
                    android:textColor="@color/title_color"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvQt"
                    app:layout_constraintEnd_toStartOf="@+id/tvQt"
                    app:layout_constraintTop_toTopOf="@+id/tvQt" />

                <TextView
                    android:id="@+id/tvQt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="68dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/title_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/tvHeader1"
                    app:layout_constraintTop_toBottomOf="@+id/tvHeader1"
                    tools:text="0.0 ms" />

                <TextView
                    android:id="@+id/tvlblPr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="PR"
                    android:textColor="@color/title_color"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPr"
                    app:layout_constraintStart_toStartOf="@+id/tvlblQt"
                    app:layout_constraintTop_toTopOf="@+id/tvPr" />

                <TextView
                    android:id="@+id/tvPr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/title_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/tvQt"
                    app:layout_constraintTop_toBottomOf="@+id/tvQt"
                    tools:text="0.0 ms" />

                <TextView
                    android:id="@+id/tvlblQtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="QTc"
                    android:textColor="@color/title_color"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvQtc"
                    app:layout_constraintStart_toStartOf="@+id/tvlblPr"
                    app:layout_constraintTop_toTopOf="@+id/tvQtc" />

                <TextView
                    android:id="@+id/tvQtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/title_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/tvPr"
                    app:layout_constraintTop_toBottomOf="@+id/tvPr"
                    tools:text="0.0 ms" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <!--#11111-->


        <LinearLayout
