                    android:textSize="11sp"
                    android:visibility="visible"
                    tools:text="ECG Findings will appear here" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvlblInterpretation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/findings_interpretation"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toStartOf="@id/tvlblRecommendations"
                    app:layout_constraintStart_toEndOf="@+id/tvlblFindings"
                    app:layout_constraintTop_toBottomOf="@id/graphLayout" />

                <TextView
                    android:id="@+id/tvInterpretation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/title_color"
                    android:textSize="11sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@+id/hr"
                    app:layout_constraintEnd_toStartOf="@+id/tvlblRecommendations"
                    app:layout_constraintStart_toStartOf="@id/tvlblInterpretation"
                    app:layout_constraintTop_toBottomOf="@id/tvlblInterpretation"
                    app:layout_constraintVertical_bias="0.0"
                    tools:text="Findings Interpretation will appear here" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvlblRecommendations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/recommendations"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toStartOf="@id/tvlblReportedBy"
                    app:layout_constraintStart_toEndOf="@+id/tvlblInterpretation"
                    app:layout_constraintTop_toBottomOf="@id/graphLayout" />

                <TextView
                    android:id="@+id/tvRecommendations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/title_color"
                    android:textSize="11sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@+id/hr"
                    app:layout_constraintEnd_toStartOf="@+id/tvlblReportedBy"
                    app:layout_constraintStart_toStartOf="@+id/tvlblRecommendations"
                    app:layout_constraintTop_toBottomOf="@id/tvlblRecommendations"
                    app:layout_constraintVertical_bias="0.0"
                    tools:text="Recommendations will appear here" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvlblReportedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="100dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Reported By:"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/llFeedbackResponse" />


                <ImageView
                    android:id="@+id/imgSignature"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <TextView
                    android:id="@+id/tvReportedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/title_color"
                    android:textSize="11sp"
                    android:visibility="visible"
                    tools:text="Reported By, Some Doctor Info" />

            </LinearLayout>

        </LinearLayout>


        <View
            android:id="@+id/hr"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/tvlblReferredBy"
            app:layout_constraintEnd_toEndOf="@id/graphLayout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/graphLayout" />

        <LinearLayout
            android:id="@+id/llReferredBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvlblReferredBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Referred By:"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvReferredBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/title_color"
                android:textSize="11sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/tvlblReferredBy"
                app:layout_constraintStart_toEndOf="@id/tvlblReferredBy"
                app:layout_constraintTop_toTopOf="@+id/tvlblReferredBy"
                tools:text="You will nedd to read this string" />

        </LinearLayout>


    </LinearLayout>
</layout>
