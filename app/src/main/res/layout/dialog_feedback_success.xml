<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clDialog"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:background="@drawable/alert_dialog_message_box">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imgTick"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_speed="2"
        app:lottie_rawRes="@raw/green_tick_animation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica_bold"
        android:textColor="#111111"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:lineSpacingExtra="3dp"
        tools:text="ECG Recording Sent for Feedback!"
        app:layout_constraintTop_toBottomOf="@id/imgTick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>